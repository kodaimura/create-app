#!/bin/bash

if [ $# -eq 0 ]; then
    echo "ERROR: goat-create-app <appname> [-db {sqlite3 | postgres | mysql}]"
    exit 1
fi

APP_NAME=${1:-goatapp}
shift

DB="sqlite3"

while (( $# > 0 ))
do
  case $1 in
    -db | --db | --db=*)
      if [[ $1 =~ ^--db= ]]; then
        DB=$2
      elif [ -z $2 ]; then
        echo "ERROR: goat-create-app <appname> [-db {sqlite3 | postgres | mysql}]"
        exit 1
      else
        DB=$2
        shift
      fi
  esac
  shift
done

if [ $DB != "sqlite3" ] && [ $DB != "postgres" ] && [ $DB != "mysql" ]; then
	echo "ERROR: goat-create-app <appname> [-db {sqlite3 | postgres | mysql}]"
  exit 1
fi

git clone https://github.com/kodaimura/goat $APP_NAME
cd $APP_NAME
bash _setup/setup.sh $APP_NAME -db $DB
